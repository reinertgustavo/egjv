@model SmartGarcom.ViewModels.OrderCardVM

@{
    ViewData["Title"] = "Nova Comanda";
}
<div class="row ">
    <form asp-controller="Home" asp-action="Create" method="post" class="form-horizontal col-lg-11 col-md-11 ">
        <div class="form-group d-flex justify-content-center">
            <label class="col-sm-2 control-label" asp-for="Name"></label>
            <div class="col-sm-10 col-lg-10 col-md-10">
                <input class="form-control" asp-for="Name" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
        </div>
        <div class="form-group d-flex justify-content-center">
            <label class="col-sm-2 control-label" asp-for="CPF"></label>
            <div class="col-sm-10 col-lg-10 col-md-10">
                <input class="form-control" asp-for="CPF" />
                <span class="text-danger" asp-validation-for="CPF"></span>
            </div>
        </div>
        <div class="form-group d-flex justify-content-center">
            <label class="col-sm-2 control-label" asp-for="Email"></label>
            <div class="col-sm-10 col-lg-10 col-md-10">
                <input class="form-control" asp-for="Email" />
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
        </div>
        @if (ViewBag.TUser != null)
        {
            @if (ViewBag.TUser.Role.RoleId != 5)
            {
                @if (ViewBag.TUser.Role.RoleId == 1)
                {
                    <div class="form-group">
                        <label class="col-sm-2 control-label" asp-for="SelectedCompanyId"></label>
                        <div class="col-sm-10">
                            <select class="form-control" asp-for="SelectedCompanyId" asp-items="Model.Companies">
                                <option value=""> Selecione uma opção</option>
                            </select>
                            <span class="text-danger" asp-validation-for="SelectedCompanyId"></span>
                        </div>
                    </div>
                }
                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="SelectedTableId"></label>
                    <div class="col-sm-10">
                        <select class="form-control" asp-for="SelectedTableId" asp-items="Model.Tables">
                            <option value=""> Selecione uma opção</option>
                        </select>
                        <span class="text-danger" asp-validation-for="SelectedTableId"></span>
                    </div>
                </div>
            }
            else
            {
                <div class="form-group hide">
                    <label class="col-sm-2 control-label" asp-for="SelectedCompanyId"></label>
                    <div class="col-sm-10 col-lg-10 col-md-10">
                        <input class="form-control" asp-for="SelectedCompanyId" />
                        <span class="text-danger" asp-validation-for="SelectedCompanyId"></span>
                    </div>
                </div>
                <div class="form-group hidden">
                    <label class="col-sm-2 control-label" asp-for="SelectedTableId"></label>
                    <div class="col-sm-10 col-lg-10 col-md-10">
                        <input class="form-control" asp-for="SelectedTableId" />
                        <span class="text-danger" asp-validation-for="SelectedTableId"></span>
                    </div>
                </div>
            }

        }
        else
        {
            <div class="form-group hide">
                <label class="col-sm-2 control-label" asp-for="SelectedCompanyId"></label>
                <div class="col-sm-10 col-lg-10 col-md-10">
                    <input class="form-control" asp-for="SelectedCompanyId" />
                    <span class="text-danger" asp-validation-for="SelectedCompanyId"></span>
                </div>
            </div>
            <div class="form-group hidden">
                <label class="col-sm-2 control-label" asp-for="SelectedTableId"></label>
                <div class="col-sm-10 col-lg-10 col-md-10">
                    <input class="form-control" asp-for="SelectedTableId" />
                    <span class="text-danger" asp-validation-for="SelectedTableId"></span>
                </div>
            </div>
        }



        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <a asp-controller="Home"
                   asp-action="Index"
                   class="btn btn-default">Cancelar</a>
                <button type="submit"
                        class="btn btn-success">
                    Salvar
                </button>
            </div>
        </div>
    </form>
</div>