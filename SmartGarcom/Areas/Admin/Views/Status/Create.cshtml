@model SmartGarcom.ViewModels.StatusVM
@{
    ViewData["Title"] = "Novo cadastro de Status";
}

<div class="row">
    <form asp-controller="Status" asp-action="Create" method="post" class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2 control-label" asp-for="Name"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Name" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" asp-for="Description"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Description" />
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <a asp-controller="Status"
                   asp-action="Index"
                   class="btn btn-default">Cancelar</a>
                <button type="submit"
                        class="btn btn-success">
                    Salvar
                </button>
            </div>
        </div>
    </form>
</div>