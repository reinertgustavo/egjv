@model List<SmartGarcom.Models.Status>
@{
    ViewData["Title"] = "Status";
    ViewData["Controller"] = "Status";
    ViewData["Action"] = "Create";
    ViewData["NomeBtn"] = "Cadastrar Status";
}

<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-bordered table-hover display" id="dataTables-Assets">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Status</th>
                    <th>Descrição</th>
                    <th width="10%"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var status in Model)
                {
                <tr>
                    <td class="text-center">@status.StatusID</td>
                    <td>@status.Name</td>
                    <td>@status.Description</td>
                    <td>
                        <a class="btn btn-primary glyphicon glyphicon-pencil" asp-area="Admin" asp-controller="Status" asp-action="Edit" asp-route-id="@status.StatusID"></a>
                        <a class="btn btn-danger glyphicon glyphicon-trash" asp-area="Admin" asp-controller="Status" asp-action="Delete" asp-route-id="@status.StatusID"></a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#dataTables-Assets').DataTable({
                lengthMenu: [[10, 25, 50, -1], [10, 25, 50, "All"]],
                dom: "<'row'<'col-sm-4 hidden-xs'l><'col-sm-4 hidden-xs'B><'col-sm-4'f>> " +
                    "<'row'<'col-sm-12'tr>>" +
                    "<'row'<'col-sm-5'i><'col-sm-7'p>>",

                buttons: [
                    {
                        extend: 'copyHtml5',
                        text: '<i class="fa fa-files-o"></i>',
                        titleAttr: 'Copiar',
                        exportOptions: {
                            columns: ':visible'
                        },
                    },
                    {
                        extend: 'excelHtml5',
                        text: '<i class="fa fa-file-excel-o"></i>',
                        titleAttr: 'Excel',
                        exportOptions: {
                            columns: ':visible'
                        },
                    },
                    {
                        extend: 'pdfHtml5',
                        text: '<i class="fa fa-file-pdf-o"></i>',
                        titleAttr: 'PDF',
                        exportOptions: {
                            columns: ':visible'
                        }
                    },
                    {
                        extend: 'colvis',
                        text: 'Selecionar Colunas'

                    }

                ],
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Portuguese-Brasil.json"
                },
                colReorder: true

            });
        });
    </script>

}
