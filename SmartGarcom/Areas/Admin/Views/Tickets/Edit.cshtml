@model SmartGarcom.ViewModels.TicketVM

@{
    ViewData["Title"] = "Editar Ticket";
}

<div class="row">
    <form asp-controller="Tickets" asp-action="Create" method="post" class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2 control-label" asp-for="TicketId"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="TicketId" />
                <span class="text-danger" asp-validation-for="TicketId"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" asp-for="Name"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Name" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Status</label>
            <div class="col-sm-10">
                <select class="form-control" asp-for="Status">
                    <option value="">Selecione uma opção</option>
                    <option value="">Aberto</option>
                    <option value="">Em progresso</option>
                    <option value="">Fechado</option>
                </select>
            </div>
        </div>
        @if (ViewBag.TUser.Role.RoleId == 1)
        {
            <div class="form-group">
                <label class="col-sm-2 control-label" asp-for="SelectedCompanyId"></label>
                <div class="col-sm-10">
                    <select class="form-control" asp-for="SelectedCompanyId" asp-items="Model.Companies">
                        <option value="">Selecione uma opção</option>
                    </select>
                    <span class="text-danger" asp-validation-for="SelectedCompanyId"></span>
                </div>
            </div>
        }

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <a asp-controller="Tickets"
                   asp-action="Index"
                   class="btn btn-default">Cancelar</a>
                <button type="submit"
                        class="btn btn-success">
                    Salvar
                </button>
            </div>
        </div>
    </form>
</div>