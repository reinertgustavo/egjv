@model List<SmartGarcom.Models.Table>
@{
    ViewData["Title"] = "Mesas";
    ViewData["Controller"] = "Tables";
    ViewData["Action"] = "Create";
    ViewData["NomeBtn"] = "Criar Mesa";
}
<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-bordered dt-responsive nowrap display" id="dataTables-products">
            <thead>
                <tr>
                    @if (ViewBag.TUser.Role.RoleId == 1)
                    {
                        <th>#</th>
                    }

                    <th>Num. Mesa</th>
                    <th>QR-Code</th>
                    <th class="text-center" width="10%"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var table in Model)
                {
                <tr>
                    @if (ViewBag.TUser.Role.RoleId == 1)
                    {
                        <td>@table.TableId</td>
                        
                    }

                    <td>@table.Number</td>
                    <td><a href="@table.QRCode">QR-Code</a></td>
                    <td width="10%">
                        <a class="btn btn-primary glyphicon glyphicon-pencil" asp-area="Admin" asp-controller="Tables" asp-action="Edit" asp-route-id="@table.TableId"></a>
                        <a class="btn btn-danger glyphicon glyphicon-trash" asp-area="Admin" asp-controller="Tables" asp-action="Delete" asp-route-id="@table.TableId"></a>
                    </td>

                </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#dataTables-products').DataTable({
                lengthMenu: [[10, 25, 50, -1], [10, 25, 50, "All"]],
                dom: "<'row'<'col-sm-4 hidden-xs'l><'col-sm-4 hidden-xs'B><'col-sm-4'f>> " +
                     "<'row'<'col-sm-12'tr>>" +
                    "<'row'<'col-sm-5'i><'col-sm-7'p>>",

                buttons: [
                    {
                        extend: 'copyHtml5',
                        text: '<i class="fa fa-files-o"></i>',
                        titleAttr: 'Copy',
                        exportOptions: {
                            columns: ':visible'
                        },
                    },
                    {
                        extend: 'excelHtml5',
                        text: '<i class="fa fa-file-excel-o"></i>',
                        titleAttr: 'Excel',
                        exportOptions: {
                            columns: ':visible'
                        },
                    },
                    {
                        extend: 'pdfHtml5',
                        text: '<i class="fa fa-file-pdf-o"></i>',
                        titleAttr: 'PDF',
                        exportOptions: {
                            columns: ':visible'
                        }
                    },
                    {
                        extend: 'colvis',
                        text: 'Selecionar Colunas'

                    }

                ],
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Portuguese-Brasil.json"
                },
                colReorder: true

            });
        });
    </script>

}
