@model SmartGarcom.ViewModels.TableVM

@{
    ViewData["Title"] = "Editar Mesa";
}

<div class="row">
    <form asp-controller="Tables" asp-action="Create" method="post" class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2 control-label" asp-for="TableId"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="TableId" />
                <span class="text-danger" asp-validation-for="TableId"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" asp-for="Number"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Number" />
                <span class="text-danger" asp-validation-for="Number"></span>
            </div>
        </div>
        @if (ViewBag.TUser.Role.RoleId == 1)
        {
            <div class="form-group">
                <label class="col-sm-2 control-label" asp-for="SelectedCompanyId"></label>
                <div class="col-sm-10">
                    <select class="form-control" asp-for="SelectedCompanyId" asp-items="Model.Companies">
                        <option value="">Selecione uma opção</option>
                    </select>
                    <span class="text-danger" asp-validation-for="SelectedCompanyId"></span>
                </div>
            </div>
        }

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <a asp-controller="Tables"
                   asp-action="Index"
                   class="btn btn-default">Cancelar</a>
                <button type="submit"
                        class="btn btn-success">
                    Salvar
                </button>
            </div>
        </div>
    </form>
</div>