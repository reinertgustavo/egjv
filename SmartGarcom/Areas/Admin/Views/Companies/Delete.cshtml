@model SmartGarcom.Models.Company

@{
    ViewData["Title"] = "Excluir empresa";
}
<p>Você deseja mesmo excluir a empresa @Model.Name ?</p>
<form asp-controller="Companies" asp-action="Delete" method="post">
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <a asp-area="Admin"
               asp-controller="Assets"
               asp-action="Index"
               class="btn btn-default">Cancelar</a>
            <button type="submit"
                    class="btn btn-danger">
                Apagar
            </button>
        </div>
    </div>
</form>
