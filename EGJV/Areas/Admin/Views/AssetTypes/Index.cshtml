@model List<EGJV.Models.AssetType>
@{
    ViewData["Title"] = "Categorias de Ativos";
    ViewData["Controller"] = "AssetTypes";
    ViewData["Action"] = "Create";
    ViewData["NomeBtn"] = "Criar Categoria de Ativo";
}
<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-bordered dt-responsive nowrap display" id="dataTables-data">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nome</th>
                    <th>Descrição</th>
                    @if (ViewBag.TUser.Role.RoleId == 1)
                    {
                        <th>Empresa</th>
                    }
                    <th class="text-center" width="10%"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var type in Model)
                {
                    <tr>
                        <td class="text-center">@type.AssetTypeId</td>
                        <td>@type.Name</td>
                        <td>@type.Description</td>
                        @if (ViewBag.TUser.Role.RoleId == 1)
                        {
                            <td>@type.Company.Name</td>
                        }
                        <td width="10%">
                            <a class="btn btn-primary glyphicon glyphicon-pencil" asp-area="Admin" asp-controller="AssetTypes" asp-action="Edit" asp-route-id="@type.AssetTypeId"></a>
                            <a class="btn btn-danger glyphicon glyphicon-trash" asp-area="Admin" asp-controller="AssetTypes" asp-action="Delete" asp-route-id="@type.AssetTypeId"></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
